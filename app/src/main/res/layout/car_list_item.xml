<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
                                             android:layout_height="match_parent">

    <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp" app:srcCompat="@android:drawable/ic_menu_manage"
            android:id="@+id/carImage"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="16dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="16dp"/>
    <TextView
            android:text="Car Model"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/carModelTextView" android:textSize="30sp"
            app:layout_constraintStart_toEndOf="@+id/carImage" android:layout_marginStart="24dp"
            app:layout_constraintTop_toBottomOf="@+id/carMakeTextView"/>
    <TextView
            android:text="Car Make"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/carMakeTextView" android:textSize="45sp" app:layout_constraintStart_toEndOf="@+id/carImage"
            android:layout_marginStart="24dp" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="8dp"/>
</android.support.constraint.ConstraintLayout>